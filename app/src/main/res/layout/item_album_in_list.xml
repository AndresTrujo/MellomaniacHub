<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#222b31"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/album_cover_in_list_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/album_name_in_list_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            tools:text="Album Name" />

        <TextView
            android:id="@+id/artist_name_in_list_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#cccccc"
            tools:text="Artist Name" />

        <TextView
            android:id="@+id/album_year_in_list_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#999999"
            tools:text="Year" />

        <RatingBar
            android:id="@+id/album_rating_in_list_rating_bar"
            style="?android:attr/ratingBarStyleSmall" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true" 
            android:progressTint="@android:color/holo_orange_light" 
            android:secondaryProgressTint="@android:color/darker_gray" 
            android:progressBackgroundTint="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/album_review_in_list_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#bbbbbb"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="User review for this album in this specific list..." />
    </LinearLayout>

    <ImageButton
        android:id="@+id/remove_album_from_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="top"
        app:tint="#ff6666"
        android:contentDescription="Quitar de la lista"/>

</LinearLayout>