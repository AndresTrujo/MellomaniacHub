<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#14181c"
    android:padding="8dp"
    tools:context=".fragments.ListDetailFragment">

    <TextView
        android:id="@+id/list_detail_name_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center_horizontal"
        tools:text="Nombre de la Lista" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_detail_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"/>

    <!-- Podríamos añadir un FAB aquí también si quisiéramos agregar álbumes directamente desde esta pantalla -->

</LinearLayout>